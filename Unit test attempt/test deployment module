#this is a test deployment template
name: Test

 on: [push, pull_request]

 jobs:
    lint:

     runs-on: windows-latest
     steps:
     - uses: actions/checkout@v2
     - uses: actions/setup-node@v1
       with:
         node-version: '12.x'

     - name: Install dependencies
       uses: bahmutov/npm-install@v1

     - name: Run linter
       run: npm run lint

   test:
     runs-on: ubuntu-latest
     steps:
     - uses: actions/checkout@v2
     - uses: actions/setup-node@v1
       with:
         node-version: '12.x'

     - name: Install dependencies
       uses: bahmutov/npm-install@v1

     - name: Run test
       run: npm test

   build:
     runs-on: ubuntu-latest
     steps:
     - uses: actions/checkout@v2
     - uses: actions/setup-node@v1
       with:
         node-version: '12.x'

     - name: Install dependencies
       uses: bahmutov/npm-install@v1

     - name: Build
       run: npm run build
